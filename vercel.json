{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "server/dist/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/dist/routes/api.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "client/static/$1"
    }
  ]
}