{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "server/**/*.js",
      "use": "@vercel/node",
      "config": { "includeFiles": "server/dist/**" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/routes/api.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "client/static/$1"
    }
  ]
}